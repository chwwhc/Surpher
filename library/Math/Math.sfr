fixed namespace Math {

    fixed fun factorial(x) {
        return x == 0 ? 1 : x * factorial(x - 1);
    }

    fixed fun power(x, pow) {
        return pow == 0 ? 1 : x * power(x, pow - 1);
    }

    fixed var min = \a b -> a < b ? a : b;

    fixed var max = \a b -> a > b ? a : b;

    fixed namespace Trigonometry {
        fixed fun cos(x) {
            var flag = true;
            var result = 0;
            var pow = 0;

            for(var i = 0; i < 50; i = i + 1){
                var curr;
                if(flag){
                    curr = power(x, pow) / factorial(pow);
                }else{
                    curr = -power(x, pow) / factorial(pow);
                }
                flag = !flag;
                result = result + curr;
                pow = pow + 2;
            }

            return result;
        }

        fixed fun sin(x) {
            var flag = true;
            var result = 0;
            var pow = 1;

            for(var i = 0; i < 50; i = i + 1){
                var curr;
                if(flag){
                    curr = power(x, pow) / factorial(pow);
                }else{
                    curr = -power(x, pow) / factorial(pow);
                }
                flag = !flag;
                result = result + curr;
                pow = pow + 2;
            }

            return result;
        }
    }

}